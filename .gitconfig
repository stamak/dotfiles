[user]
	name = Stanislav Makar
  email = smakar@mirantis.com
[merge]
  tool = vimdiff
[push]
	default = matching
[gitreview]
  username = smakar
[alias]
  st = status
  ci = commit --verbose -a
  ciam = commit --verbose -a --amend
  cim = commit -a -m 
  co = checkout
  di = diff
  dc = diff --cached
  aa = add --all

[core]
	editor = vim
